{
  "name": "@mcp-layer/test-server",
  "version": "1.0.1",
  "description": "Feature-rich MCP server for integration testing and local development.",
  "repository": {
    "type": "git",
    "url": "https://github.com/3rd-Eden/mcp-layer"
  },
  "type": "module",
  "keywords": [
    "mcp",
    "server",
    "testing",
    "integration",
    "model-context-protocol"
  ],
  "scripts": {
    "test": "node --test --experimental-test-coverage ./test/**/*.js"
  },
  "bin": {
    "mcp-test-server": "src/bin.js",
    "mcp-test-server-http": "src/http.js"
  },
  "main": "src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "default": "./src/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mcp-layer/error": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "express": "^5.0.1",
    "zod": "^3.25.76"
  }
}
